<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>pt.uc.dei.paj</groupId>
		<artifactId>projecto4.grupo1.albertoricardo</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<artifactId>p4-ear</artifactId>
	<packaging>ear</packaging>
	
	<properties>
		<app.filename>Projecto6</app.filename>
	</properties>

	<!-- Adicionar os modulos que criÃ¡mos -->
	<dependencies>
		<dependency>
			<groupId>pt.uc.dei.paj</groupId>
			<artifactId>p4-jpa</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>pt.uc.dei.paj</groupId>
			<artifactId>p4-web</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>pt.uc.dei.paj</groupId>
			<artifactId>p4-ws</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>pt.uc.dei.paj</groupId>
			<artifactId>p4-ejb</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>pt.uc.dei.paj</groupId>
			<artifactId>p4-ejbClient</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
	</dependencies>

	<build>
		<finalName>${app.filename}</finalName>
		<plugins>
			<!--Ear plugin -creating the ear - watch out skinny WARS! -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<finalName>${app.filename}</finalName>
					<defaultJavaBundleDir>lib/</defaultJavaBundleDir>
					<skinnyWars>true</skinnyWars>
					<modules>
						<webModule>
							<groupId>pt.uc.dei.paj</groupId>
							<artifactId>p4-web</artifactId>
						</webModule>
						<webModule>
							<groupId>pt.uc.dei.paj</groupId>
							<artifactId>p4-ws</artifactId>
						</webModule>
						<ejbModule>
							<groupId>pt.uc.dei.paj</groupId>
							<artifactId>p4-ejb</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>pt.uc.dei.paj</groupId>
							<artifactId>p4-ejbClient</artifactId>
						</ejbModule>
					</modules>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.wildfly.plugins</groupId>
				<artifactId>wildfly-maven-plugin</artifactId>
				<configuration>
					<skip>false</skip>
					<filename>${app.filename}.ear</filename>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>